<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="menuki.ticketing.controller.OrderDetailsController">

    <top>
        <ToolBar>
            <Label text="Order Details" styleClass="title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Close" onAction="#handleClose"/>
        </ToolBar>
    </top>

    <center>
        <VBox spacing="12" alignment="CENTER">
            <Label fx:id="eventTitle"
                   text="Event Name"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <GridPane hgap="16" vgap="6">
                <columnConstraints>
                    <ColumnConstraints minWidth="90"/>
                    <ColumnConstraints minWidth="140"/>
                    <ColumnConstraints minWidth="90"/>
                    <ColumnConstraints minWidth="140"/>
                </columnConstraints>

                <Label text="Order #:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="lblOrderId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="User:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <Label fx:id="lblUser" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <Label text="Event:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label fx:id="lblEvent" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Date:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <Label fx:id="lblDate" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
            </GridPane>
            <TableView fx:id="itemsTable"
                       prefHeight="200" prefWidth="380"
                       maxWidth="420">
                <columns>
                    <TableColumn fx:id="colSeat"  text="Seat"  prefWidth="200"/>
                    <TableColumn fx:id="colPrice" text="Price" prefWidth="160"/>
                </columns>
                <placeholder><Label text="No items"/></placeholder>
            </TableView>
            <Label fx:id="lblNote"
                   text="This order has no items. The event may have been cancelled."
                   visible="false" wrapText="true"
                   style="-fx-text-fill: #b00020; -fx-font-style: italic;"/>
            <HBox alignment="CENTER_RIGHT" spacing="8" maxWidth="420">
                <Label text="Subtotal:"/>
                <Label fx:id="lblSubtotal" text="'$0.00'" style="-fx-font-weight: bold;" />
            </HBox>
        </VBox>
    </center>

    <padding>
        <Insets top="8" right="16" bottom="12" left="16"/>
    </padding>
</BorderPane>
