<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="menuki.ticketing.controller.OrdersController"
            stylesheets="@/css/admin.css">

    <top>
        <ToolBar>
            <Label text="My Orders" styleClass="title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Close" onAction="#handleClose"/>
        </ToolBar>
    </top>

    <center>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="ordersTable" prefHeight="420" prefWidth="760">
                    <columns>
                        <TableColumn fx:id="colId"      text="Order #" prefWidth="120"/>
                        <TableColumn fx:id="colCreated" text="Created" prefWidth="220"/>
                        <TableColumn fx:id="colAction"  text="Action"  prefWidth="120"/>
                    </columns>
                    <placeholder><Label text="No orders found"/></placeholder>
                </TableView>
            </children>
            <padding>
                <Insets top="0" right="20" bottom="20" left="0"/>
            </padding>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10">
            <children>
                <Label text="Ready"/>
                <Pane HBox.hgrow="ALWAYS"/>
            </children>
            <padding>
                <Insets top="6" right="20" bottom="10" left="10"/>
            </padding>
        </HBox>
    </bottom>

</BorderPane>
