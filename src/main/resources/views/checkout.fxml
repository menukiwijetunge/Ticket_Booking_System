<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="menuki.ticketing.controller.CheckoutController"
            prefWidth="900" prefHeight="600">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-background-color:#f7f7fa;">
            <children>
                <Label text="Checkout"
                       style="-fx-font-size:18px; -fx-font-weight:bold;"/>
            </children>
            <padding><Insets top="14" right="18" bottom="14" left="18"/></padding>
        </HBox>
    </top>

    <center>
        <VBox spacing="16">
            <children>

                <GridPane hgap="10" vgap="8">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="110"/>
                        <ColumnConstraints halignment="LEFT"  minWidth="260"/>
                        <ColumnConstraints halignment="RIGHT" minWidth="110"/>
                        <ColumnConstraints halignment="LEFT"  minWidth="260"/>
                    </columnConstraints>
                    <children>
                        <Label text="Event:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="eventNameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Event ID:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <Label fx:id="eventIdLabel" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                        <Label text="Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label fx:id="eventDateLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Venue:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <Label fx:id="eventVenueLabel" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                    </children>
                </GridPane>

                <TableView fx:id="seatsTable" prefHeight="360">
                    <columns>
                        <TableColumn fx:id="colSeatId"   text="Seat"     prefWidth="160"/>
                        <TableColumn fx:id="colSeatType" text="Type"     prefWidth="140"/>
                        <TableColumn fx:id="colPrice"    text="Price (AUD)" prefWidth="160"/>
                    </columns>
                </TableView>

            </children>
            <padding><Insets top="8" right="18" bottom="8" left="18"/></padding>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="16" alignment="CENTER_RIGHT" style="-fx-background-color:#fafafa;">
            <children>
                <Label text="Total:" style="-fx-font-weight:bold; -fx-font-size:14px;"/>
                <Label fx:id="totalLabel" style="-fx-font-size:14px;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Back" onAction="#onBack"/>
                <Button text="Confirm Booking" onAction="#onConfirm" defaultButton="true"/>
            </children>
            <padding><Insets top="12" right="18" bottom="12" left="18"/></padding>
        </HBox>
    </bottom>

</BorderPane>
