<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="menuki.ticketing.controller.NewEventController">
    <top>
        <ToolBar style="-fx-background-color: #f5f5f5; -fx-padding: 8;">
            <Label text="Create New Event"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button onAction="#handleCancel" text="Cancel" />
            <Button defaultButton="true" onAction="#handleSave" text="Save" />
        </ToolBar>
    </top>
    <center>
        <GridPane hgap="14" vgap="10" style="-fx-padding: 16;">
            <columnConstraints>
                <ColumnConstraints minWidth="140" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="260" />
            </columnConstraints>
            <Label text="Event Name:" GridPane.rowIndex="0" />
            <TextField fx:id="txtName"
                       promptText="e.g., Gala Night"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="0" />
            <Label text="Event Date:" GridPane.rowIndex="1" />
            <DatePicker fx:id="dpDate"
                        GridPane.columnIndex="1"
                        GridPane.rowIndex="1" />
            <Label text="Start Time:" GridPane.rowIndex="2" />
            <ComboBox fx:id="cbStartTime"
                      promptText="Select start time"
                      GridPane.columnIndex="1"
                      GridPane.rowIndex="2" />
            <Label text="End Time:" GridPane.rowIndex="3" />
            <ComboBox fx:id="cbEndTime"
                      promptText="Select end time"
                      GridPane.columnIndex="1"
                      GridPane.rowIndex="3" />
            <Label text="VIP Price ($):" GridPane.rowIndex="4" />
            <TextField fx:id="txtVipPrice"
                       promptText="25.00"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="4" />
            <Label text="Standard Price ($):" GridPane.rowIndex="5" />
            <TextField fx:id="txtStdPrice"
                       promptText="12.00"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="5" />
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>
    </center>

    <padding>
        <Insets top="10" right="16" bottom="14" left="16" />
    </padding>

</BorderPane>
