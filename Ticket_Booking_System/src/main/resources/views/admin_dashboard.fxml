<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="menuki.ticketing.controller.AdminDashboardController">

    <top>
        <ToolBar>
            <Label text="Admin Dashboard" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label fx:id="currentUserLabel" text="admin"/>
            <Button text="Logout" onAction="#handleLogout"/>
        </ToolBar>
    </top>

    <center>
        <VBox BorderPane.alignment="CENTER" alignment="CENTER">
            <children>
                <TableView fx:id="eventsTable" prefHeight="400" prefWidth="800">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>

                    <columns>
                        <TableColumn fx:id="colEventId"         text="ID"              prefWidth="80"/>
                        <TableColumn fx:id="colEventName"       text="Event"           prefWidth="220"/>
                        <TableColumn fx:id="colEventDate"       text="Date"            prefWidth="120"/>
                        <TableColumn fx:id="colStartTime"       text="Start Time"      prefWidth="110"/>
                        <TableColumn fx:id="colEndTime"         text="End Time"        prefWidth="110"/>
                        <TableColumn fx:id="colSeatsAvailable"  text="Seats Available" prefWidth="140"/>
                        <TableColumn fx:id="colDelete"          text="Delete"          prefWidth="90"/>
                    </columns>

                    <placeholder><Label text="No events found"/></placeholder>
                </TableView>
            </children>
            <padding>
                <Insets top="0" right="20" bottom="20" left="20"/>
            </padding>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" style="-fx-background-color: #eeeeee;">
            <children>
                <Label text="Ready"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="Add Event" onAction="#onAddEvent"/>
            </children>
            <padding>
                <Insets top="6" right="20" bottom="10" left="10"/>
            </padding>
        </HBox>
    </bottom>

</BorderPane>
